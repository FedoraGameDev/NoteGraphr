<UserControl x:Class="NoteGraphr.Controls.TitleBar.TitleText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NoteGraphr.Controls.TitleBar"
             mc:Ignorable="d">
    <Grid>
        <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Text="{Binding Title,RelativeSource={RelativeSource FindAncestor,AncestorType=Window},FallbackValue='NoteGraphr'}" />
    </Grid>
</UserControl>
